{erl_opts, [fail_on_warning,
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            warn_export_vars,
            warn_exported_vars,
            %%warn_untyped_record,
            % warn_missing_spec,
            % strict_validation,
            debug_info]}.

{pre_hooks, [{clean, "rm -fr ebin priv erl_crash.dump"}]}.

{deps, [
    %% BTREE library
    {cbt, ".*", {git, "https://github.com/benoitc/cbt.git",
                 {branch, "master"}}}
]}.
